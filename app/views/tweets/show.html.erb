 <%= render "shared/header" %>
  <main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @tweet.title%>
      </p>
      <%= link_to "by #{@tweet.user.name}",class: :prototype__user%>
      <%# プロトタイプの投稿者とログインしているユーザーが同じであれば以下を表示する %>
        <% if current_user == @tweet.user %>
        <div class="prototype__manage">
          <%#= link_to "編集する", edit_tweet_path(@tweet), class: :prototype__btn %>
          <%= link_to "削除する", tweet_path(@tweet), method: :delete, class: :prototype__btn %>
        </div>
       <% end %>
      <%# // プロトタイプの投稿者とログインしているユーザーが同じであれば上記を表示する %>
      <div class="prototype__image">
        <%= image_tag @tweet.image%>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title"></p>
          <p class="detail__message">
            <%= @tweet.title%>
          </p>
        </div>
       
      <div class="prototype__comments">
        <%# ログインしているユーザーには以下のコメント投稿フォームを表示する %>
        <%#if user_signed_in?  %>
           <%#= form_with model:[@prototype, @comment],local: true do |f|%>
            <div class="field">
               <%#= f.label :content, "コメント" %><br />
               <%#= f.text_field :content, id:"comment_content" %>
            </div>
            <div class="actions">
              <%#= f.submit "送信する", class: :form__btn  %>
            </div>
            <%# end %>
          <%# end %>
        <%# // ログインしているユーザーには上記を表示する %>
        <ul class="comments_lists">
        <%#@comments.each do |comment| %>
          <%# 投稿に紐づくコメントを一覧する処理を記述する %>
            <li class="comments_list">
              <%#= comment.content%>
             <%#= link_to "（#{comment.user.name}）", user_path(comment.user), class: :comment_user %>
            </li>
             <%# end %>
          <%# // 投稿に紐づくコメントを一覧する処理を記述する %>
        </ul>
      </div>
    </div>
  </div>
</main>
<%= render "shared/footer" %>