<%= render "shared/header" %>
    <div class="mainimg">
             <%= image_tag "taniku.jpg" %>
        </div>
    <p class="center">New Topic</p>
<div class="catch">
  <% @tweets.each do |tweet| %>
    <div class="content_post" >
  <%= image_tag tweet.image.variant(resize: '500x500'), class: "tweet-img" if tweet.image.attached? %>
      <p><%= tweet.text %></p>
      <span class="name">
        <%= tweet.title %>
      </span>
    </div>
 <% end %>
</div>
<%= render "shared/footer" %>